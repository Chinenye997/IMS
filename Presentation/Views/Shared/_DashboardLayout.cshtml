<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IMS</title>

    <!-- Bootstrap CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="d-flex vh-100">

    <!-- SIDE NAV -->
    <nav class="d-flex flex-column bg-primary text-white p-3 fs-5" style="width: 280px;">
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item mb-3">
                <a asp-controller="Home" asp-action="Index"
                   class="nav-link text-white d-flex align-items-center @(ViewContext.RouteData.Values["controller"]?.ToString()=="Home"?"active":"")">
                    <i class="bi bi-house-door me-3"></i> Home
                </a>
            </li>
            <li class="nav-item mb-3">
                <a asp-controller="Product" asp-action="Index"
                   class="nav-link text-white d-flex align-items-center @(ViewContext.RouteData.Values["controller"]?.ToString()=="Product"?"active":"")">
                    <i class="bi bi-box-seam me-3"></i> Products
                </a>
            </li>
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item mb-3">
                    <a asp-controller="Category" asp-action="Index"
                       class="nav-link text-white d-flex align-items-center">
                        <i class="bi bi-tags me-3"></i> Categories
                    </a>
                </li>
            }

            <li class="nav-item mb-3">
                <a asp-controller="Store" asp-action="Index"
                   class="nav-link text-white d-flex align-items-center @(ViewContext.RouteData.Values["controller"]?.ToString()=="Store"?"active":"")">
                    <i class="bi bi-shop me-3"></i> Stores
                </a>
            </li>
            <li class="nav-item mb-3">
                <a asp-controller="Admin" asp-action="Index"
                   class="nav-link text-white d-flex align-items-center @(ViewContext.RouteData.Values["controller"]?.ToString()=="AllUsers"?"active":"")">
                    <i class="bi bi-head me-3"></i> Role Management
                </a>
            </li>
            <li class="nav-item mb-3">
                <a asp-controller="Payment" asp-action="Index"
                   class="nav-link text-white d-flex align-items-center @(ViewContext.RouteData.Values["controller"]?.ToString()=="Payment"?"active":"")">
                    <i class="bi bi-money me-3"></i> Payment
                </a>
            </li>
            <li class="nav-item mb-3">
                <a asp-controller="Finances" asp-action="Index"
                   class="nav-link text-white d-flex align-items-center @(ViewContext.RouteData.Values["controller"]?.ToString()=="Finances"?"active":"")">
                    <i class="bi bi-money me-3"></i>Report
                </a>
            </li>
        </ul>

        <div class="mt-auto">
            <a asp-controller="Product" asp-action="Create"
               class="btn btn-outline-light w-100 mb-2 d-flex align-items-center justify-content-center">
                <i class="bi bi-plus-lg me-3"></i> Add product
            </a>
            <a asp-controller="Auth" asp-action="Logout"
               class="btn btn-outline-light w-100 d-flex align-items-center justify-content-center">
                <i class="bi bi-box-arrow-right me-3"></i> Log out
            </a>
        </div>
    </nav>

    <!-- MAIN CONTENT AREA -->
    <div class="flex-grow-1 d-flex flex-column">

        <!-- TOP BAR: search only -->
        <header class="d-flex align-items-center bg-light px-4 py-3 shadow-sm">
            <form class="d-flex w-75" method="get" asp-controller="Product" asp-action="Index">
                <input class="form-control rounded-pill me-4"
                       style="width: 500px;"
                       type="search"
                       name="searchTerm"
                       placeholder="Search…"
                       aria-label="Search" />
                <button class="btn btn-primary rounded-pill" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </form>
        </header>


        @* Success alert, shown on any page if TempData["Success"] is set *@
        @if (TempData["Success"] != null)
        {
            <div id="success-alert" class="alert alert-success alert-dismissible fade show m-3" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }


        <!-- Page content -->
        <main class="flex-grow-1 overflow-auto bg-white p-4">
            @RenderBody()
        </main>
        <footer class="bg-light text-center text-muted py-3">
            <div class="container">
                © 2025 My IMS • All rights reserved
            </div>
        </footer>

    </div>
    <partial name="_ValidationScriptsPartial" />

    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

    @section Scripts {
		<!-- jQuery & Validation -->
		<script src="~/js/jquery.min.js"></script>
       @*  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> *@
		@* <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script> *@
		<script src="~/js/jquery.validate.min.js"></script>
        @* <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script> *@
		<script src="~/js/jquery.validate.unobtrusive.min.js"></script>
		<script src="~/js/bootstrap.bundle.min.js"></script>
        @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script> *@


        <!-- Auto-dismiss success alert -->
        <script>
            window.setTimeout(function() {
              var alertEl = document.getElementById('success-alert');
              if (alertEl) {
                new bootstrap.Alert(alertEl).close();
              }
            }, 300);
        </script>
    }

</body>
</html>