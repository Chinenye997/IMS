@{
    ViewData["Title"] = "Stock Value";
    Layout = "_DashboardLayout";
}

<div class="container mt-5">
    <div class="card shadow-sm text-center mx-auto" style="max-width: 500px;">
        <div class="card-body p-4">
            <h3 class="card-title mb-3">Total Stock Value</h3>
            <p class="text-muted mb-4">Current worth of the entire inventory</p>
            <p class="h4 mb-3">₦@ViewBag.TotalValue.ToString("")</p>
            <a asp-action="TopSellers" class="btn btn-outline-primary mb-3">Top Selling Products</a>
            <a asp-action="Index" asp-controller="Product" class="btn btn-primary w-100">
                Back to Products
            </a>
        </div>
    </div>
</div>
