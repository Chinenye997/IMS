
@model List<Application.DTOs.MostSoldDto>
@{
    ViewData["Title"] = "Top Selling Products";
    Layout = "_DashboardLayout";

}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Top 5 Best-Selling Products</h4>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <p class="text-muted">No sales have been recorded yet.</p>
            }
            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Units Sold</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model[i].Name</td>
                                <td>@Model[i].TotalSold</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-secondary">Back to Products</a>
        </div>
    </div>
</div>

