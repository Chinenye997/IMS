@model Application.DTOs.OrderResponse
@{
    ViewData["Title"] = "Order Details";
    Layout = "_DashboardLayout";
    var orderId = ViewBag.OrderId as string ?? "";
}

<div class="container mt-4">
    <!-- Page title with invoice number -->
    <h4 class="mb-3">🧾 Order: @orderId</h4>

    <!-- Display order items in a table -->
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Subtotal</th>
                <th>Customer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>₦@item.UnitPrice.ToString("N0")</td>
                    <td>₦@item.Subtotal.ToString("N0")</td>
                    <td>@Model.CustomerName</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="card-body p-2">
        <a asp-action="Index" asp-controller="Payment" class="btn btn-primary w-100">
            Back to Order
        </a>
    </div>
    
</div>
