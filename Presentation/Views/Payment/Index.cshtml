@model List<Application.DTOs.OrderResponse>
@{
    ViewData["Title"] = "Payments";
    Layout = "_DashboardLayout";
    var search = ViewBag.Search as string ?? "";
}

<div class="container mt-4">
    <!-- Page title -->
    <h4 class="mb-3">🧾 Order History</h4>

    <!-- Search bar for filtering orders -->
    <form method="get" class="mb-1 d-flex">
        <input type="text" name="search" value="@search" class="form-control me-2" style="width: 200px;" placeholder=" Search order ID, customer, method..." />
        <button class="btn btn-primary" type="submit">Search</button>
    </form>

    @if (!Model.Any())
    {
        <!-- Show message if no orders found -->
        <div class="alert alert-info">No results found for: <strong>@search</strong></div>
    }
    else
    {
        <!-- Display orders in a table -->
        <div class="card mb-3">
            <div class="card-body p-0">
                <table class="table table-striped table-bordered mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Invoice No</th>
                            <th>Items</th>
                            <th>Payment Method</th>
                            <th>Total</th>
                            <th>Pay Status</th>
                            <th>Paid At</th>
                            <th>Customer</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.InvoiceNo</td>
                                <td>@order.Items.Count</td>
                                <td>@order.PaymentMethod</td>
                                <td>₦@order.TotalAmount.ToString("N0")</td>
                                <td>@order.PaymentStatus</td>
                                <td>@order.PaidAt?.ToString("g")</td>
                                <td>@order.CustomerName</td>
                                <td>
                                    <a asp-action="Details" asp-controller="Payment" asp-route-invoiceNo="@order.InvoiceNo" class="btn btn-sm btn-outline-primary">
                                        View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}