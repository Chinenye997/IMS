@model List<Application.DTOs.UserResponse>
@{
	ViewData["Title"] = "All Users";
	Layout = "_DashboardLayout";
	var count = 0;
}
<h2>All Users</h2>

@* If no users found, show friendly message *@
@if(Model == null || !Model.Any()){
	<p>No Users found.</p>
}
else{
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>Full Name</th>
				<th>Gender</th>
				<th>Address</th>
				<th>Phone</th>
				<th>Email</th>
				<th>Date Registered</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var user in Model){
				<tr>
					<td>@(++count)</td>
					<td>@user.FullName</td>
					<td>@user.Gender</td>
					<td>@user.Address</td>
					<td>@user.PhoneNumber</td>
					<td>@user.Email</td>
					<td>@user.DateRegistered.ToString("dd/MM/yyyy")</td>
					<td>
						@if (!user.IsApproved && user.Role == "Agent" && User.IsInRole("Admin"))
						{
							<form asp-action="ApproveAgent" asp-route-id="@user.Id" method="post" class="d-inline">
								<button class="btn btn-sm btn-danger">UnApprove</button>
							</form>
						}

						<a asp-action="Details" asp-route-id="@user.Id" class="btn btn-primary btn-sm me-1">View</a>
						@if (User.IsInRole("Admin"))
						{
							<a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-secondary btn-sm me-1">Edit</a>
							<form asp-action="DeleteConfirmed" asp-controller="Admin" asp-route-id="@user.Id" method="post" style="display:inline">
								<button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">
									Delete
								</button>
							</form>
						}
					</td>
				</tr>
			}
		</tbody>

	</table>
}
